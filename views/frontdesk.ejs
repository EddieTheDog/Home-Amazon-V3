<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Front Desk</title>
    <link rel="stylesheet" href="/default.css">
</head>
<body>
<div class="container">
    <h1>Front Desk</h1>
    <table>
        <thead>
            <tr>
                <th>Reservation ID</th>
                <th>Sender</th>
                <th>Recipient</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <% reservations.forEach(r => { %>
            <tr>
                <td><%= r.id %></td>
                <td><%= r.sender %></td>
                <td><%= r.recipient %></td>
                <td><%= r.status %></td>
                <td><%= r.notes %></td>
                <td>
                    <form action="/frontdesk/<%= r.id %>" method="POST">
                        <select name="status">
                            <option value="reserved" <%= r.status==='reserved'?'selected':'' %>>Reserved</option>
                            <option value="checked_in" <%= r.status==='checked_in'?'selected':'' %>>Checked In</option>
                            <option value="in delivery" <%= r.status==='in delivery'?'selected':'' %>>In Delivery</option>
                            <option value="delivered" <%= r.status==='delivered'?'selected':'' %>>Delivered</option>
                        </select>
                        <input type="text" name="notes" placeholder="Add notes">
                        <button type="submit">Update</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
